<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph.xml"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.expenses.ui.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.expenses.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_monthFragment"
            app:destination="@id/monthFragment"
            app:popUpTo="@id/homeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_addFragment"
            app:destination="@id/addFragment"
            app:popUpTo="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/monthFragment"
        android:name="com.example.expenses.ui.fragments.MonthFragment"
        android:label="fragment_month"
        tools:layout="@layout/fragment_month">
        <argument
            android:name="id"
            app:argType="integer" />
        <action
            android:id="@+id/action_monthFragment_to_addFragment"
            app:destination="@id/addFragment"
            app:popUpTo="@id/monthFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.expenses.ui.fragments.AddFragment"
        android:label="AddFragment" />
</navigation>